<div id="game-board">
  <% 8.times do |r| %>
    <% 8.times do |c| %>
      <div class="board-square<%= square_classes(r, c) %>" data-row=<%= r %> data-column=<%= c %> data-empty=<%= piece_on_square(r, c).nil? %> data-under-fire=<%= under_fire?(r, c) %>>
        <div class="inner-square<%= ' under-fire' if under_fire?(r, c) %>">
          <%= render "game_piece_area", piece: piece_on_square(r, c), game: game %>
        </div>
      </div>
    <% end %>
    <div class="row-label">
      <%= r + 1 %>
    </div>
    <div class="clearfix"></div>
  <% end %>
  <% ("A".."H").each do |column| %>
    <div class="column-label"><%= column %></div>
  <% end %>
</div>
